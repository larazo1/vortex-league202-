<script>
    const teams = [
        "VORTEX - BEX-VONIZONGO", "VORTEX-Nandriana", "VORTEX-NIL YLEK", "VORTEX-GOLD", 
        "VORTEX-LUCLUC", "VORTEX-BELOUH-B", "VORTEX-LUCKA", "VORTEX-1Mig", 
        "VORTEX-Njr", "VORTEX-LIONEL", "VORTEX-TOJO", "VORTEX-FRANCKO", 
        "VORTEX-ZANDRYLEK", "VORTEX-THUNDER", "VORTEX-SANE NIRINA", "VORTEX-NAGI", 
        "VORTEX-DENIS", "VORTEX-LUNO", "VORTEX-TINO"
    ];

    let currentUser = "";
    const adminEmail = "lyzarzou@gmail.com";

    function login() {
        const email = document.getElementById('email').value;
        const pass = document.getElementById('password').value;
        
        if(pass === "Vortex") {
            currentUser = email;
            document.getElementById('auth-page').style.display = 'none';
            document.getElementById('main-app').style.display = 'block';
            initApp();
        } else {
            alert("Mot de passe incorrect");
        }
    }

    function showSection(id) {
        document.querySelectorAll('.section').forEach(s => s.classList.remove('active'));
        document.getElementById(id).classList.add('active');
    }

    function initApp() {
        // Afficher la liste
        const listEl = document.getElementById('teams-list');
        teams.forEach(t => listEl.innerHTML += `<li>${t}</li>`);

        // Logique des groupes (19 participants)
        const shuffled = [...teams].sort(() => 0.5 - Math.random());
        const groupA = shuffled.slice(0, 5);
        const groupB = shuffled.slice(5, 10);
        const groupC = shuffled.slice(10, 15);
        const groupD = shuffled.slice(15, 19); // Le groupe D a 4 joueurs

        displayGroup("Groupe A", groupA);
        displayGroup("Groupe B", groupB);
        displayGroup("Groupe C", groupC);
        displayGroup("Groupe D", groupD);

        // Simulation Classement (exemple)
        const standingTable = document.getElementById('standing-table');
        teams.forEach((t, index) => {
            const isQualified = index < 16;
            const rowClass = isQualified ? 'rank-top' : 'rank-bottom';
            standingTable.innerHTML += `
                <tr class="${rowClass}">
                    <td>${index + 1}</td>
                    <td>${t}</td>
                    <td>${19 - index}</td> <td>0</td>
                </tr>
            `;
        });
    }

    function displayGroup(name, members) {
        const container = document.getElementById('groups-display');
        let html = `<h3>${name}</h3><ul>`;
        members.forEach(m => html += `<li>${m}</li>`);
        html += `</ul>`;
        container.innerHTML += html;
    }
</script>

